<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:contentPadding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rootInfoTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Main"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/rootInfoSubTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/rootInfoTitleView"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/rootInfoIconView"
                android:text="Sub Title"
                android:textColor="#5a000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/rootInfoResultView"
                style="@style/resultTextViewStyle"
                android:layout_below="@id/rootInfoSubTitleView"
                android:layout_toLeftOf="@+id/rootInfoIconView"
                android:layout_toStartOf="@id/rootInfoIconView"
                android:text="Result"/>

            <com.mikepenz.iconics.view.IconicsImageView
                android:id="@+id/rootInfoIconView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:iiv_color="#82000000"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>